{
  "id": "plugin.bubble.recognize-gemini-ai",
  "plugin_type": "recognize",
  "icon": "gemini-ai.svg",
  "display": "Gemini AI 文字识别",
  "homepage": "https://github.com/Bubble-droid/pot-app-recognize-plugin-gemini-ai",
  "needs": [
    {
      "key": "endpoint",
      "display": "Gemini API 基础 URL（请勿携带版本路径，默认为官方 API 地址）",
      "type": "input"
    },
    {
      "key": "model",
      "display": "Gemini 模型（默认为 gemini-flash-lite）",
      "type": "input"
    },
    {
      "key": "apiKey",
      "display": "Gemini API 密钥（必填）",
      "type": "input"
    },
    {
      "key": "googleSearch",
      "display": "谷歌搜索（需要模型支持）",
      "type": "select",
      "options": {
        "disable": "禁用",
        "enable": "启用"
      }
    },
    {
      "key": "Thinking",
      "display": "思考（需要模型支持）",
      "type": "select",
      "options": {
        "disable": "禁用",
        "enable": "启用"
      }
    },
    {
      "key": "temperature（默认为 1，范围 0.0-2.0）",
      "display": "温度",
      "type": "input"
    }
  ],
  "language": {
    "auto": "Auto",
    "zh_cn": "Simplified Chinese",
    "zh_tw": "Traditional Chinese",
    "en": "English",
    "ja": "Japanese",
    "ko": "Korean",
    "fr": "French",
    "es": "Spanish",
    "ru": "Russian",
    "de": "German",
    "it": "Italian",
    "tr": "Turkish",
    "pt_pt": "Portuguese (Portugal)",
    "pt_br": "Portuguese (Brazil)",
    "vi": "Vietnamese",
    "th": "Thai",
    "ar": "Arabic",
    "hi": "Hindi",
    "fa": "Persian"
  }
}
